<div class="container">
    <div class="row m-t-2">
        <div class="col-xs-12 text-xs-center">
            <h2>Today's BOLO and ATL's</h2>
        </div>
    </div>
    <div class="row m-t-2">
        <% @people.each do |person| %> 
        <div class="col-xs-3">
            <div class="card card-block text-xs-center" style="box-shadow: 0 0 6px rgba(0,0,0,.16),0 6px 12px rgba(0,0,0,.32);">
                <img src="https://placehold.it/150x150" class="image-fluid" />
                <h5 class="m-t-2">Person of Interest</h5>
                <%= link_to(people_path(person)) do %><%= person.name %> <% end %>              
                <br />
                <%= person.height %> | <%= person.weight %>
                <br />
                <h5>Reason for Issue</h5>
                <%= person.reason %>
            </div>
        </div>
        <% end %>
    </div>
</div>





