<div class="container m-t-3">
    <div class="row m-t-2">
        <div class="col-xs-6">
            <div class="card card-block text-xs-center" style="box-shadow: 0 0 6px rgba(0,0,0,.16),0 6px 12px rgba(0,0,0,.32);">
                 
                 <i class="fa fa-users m-t-3" aria-hidden="true" style="font-size:65px;"></i>
                 <br />
                 <br />

                 <%= link_to "Active Records", active_path, class:"color btn btn-primary m-b-2" %>
            </div>
        </div>
        
        <div class="col-xs-6">
            <div class="card card-block text-xs-center" style="box-shadow: 0 0 6px rgba(0,0,0,.16),0 6px 12px rgba(0,0,0,.32);">
                 
                 <i class="fa fa-history m-t-3" aria-hidden="true" style="font-size:65px;"></i>
                 <br />
                 <br />
                 <%= link_to "Archived Records", archive_path, class:"color btn btn-primary m-b-2" %>
            </div>
        </div>
    </div>
    <% if current_user.access == "Admin" || current_user.access == "Management" || current_user.access == "Surveillance" || current_user.access == "Dispatcher"%>
    <div class="row m-t-2">
        <div class="col-xs-6">
            <div class="card card-block text-xs-center" style="box-shadow: 0 0 6px rgba(0,0,0,.16),0 6px 12px rgba(0,0,0,.32);">
               
                <i class="fa fa-map m-t-3" aria-hidden="true" style="font-size:65px;"></i>
                <br />
                <br />
                 <%= link_to "Ameristar Information", property_path, class:'color btn btn-primary m-b-2' %>
            </div>
        </div>        

        <div class="col-xs-6">
            <div class="card card-block text-xs-center" style="box-shadow: 0 0 6px rgba(0,0,0,.16),0 6px 12px rgba(0,0,0,.32);">
                
                 <i class="fa fa-lock m-t-3" aria-hidden="true" style="font-size:65px;"></i>
                 <br />
                 <br />
                  <%= link_to "Administrative Actions", admin_path, class:'color btn btn-primary m-b-2' %>
            </div>
        </div>
    </div>
    <% else %>
    <div class="row m-t-2">
            <div class="center card card-block text-xs-center" style="box-shadow: 0 0 6px rgba(0,0,0,.16),0 6px 12px rgba(0,0,0,.32);">
               
                <i class="fa fa-map m-t-3" aria-hidden="true" style="font-size:65px;"></i>
                <br />
                <br />
                 <%= link_to "Ameristar Information", property_path, class:'color btn btn-primary m-b-2' %>
            </div>
    </div>    
    <% end %>
</div>

