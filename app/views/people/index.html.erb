<div class="container">
    <div class="row m-y-2">
        <div class="col-xs-12 text-xs-center">
            <h1>All Records</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Height</th>
                        <th>Weight</th>
                        <th>Reason</th>
                        <th>Edit | Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% @people.each do |person| %>
                    <tr>
                        <td><%= person.name %></td>
                        <td><%= person.height %></td>
                        <td><%= person.weight %></td>
                        <td><%= person.reason %></td>
                        <td><%= link_to(edit_person_path(person), class:'btn btn-primary') do %><i class="fa fa-pencil"></i><% end %> | <%= link_to 'Delete', person, method: :delete, data: {confirm: 'Are you sure? (This can not be undone)'}, class:'btn btn-danger' %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>

        </div>
    </div>
</div>




<span class="octicon octicon-alert"></span>