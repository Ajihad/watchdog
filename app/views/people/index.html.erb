
<div class="m-y-2 col-xs-3"></div>    
    <div class="m-y-2 col-xs-6">
        <div class="card card-block" style="box-shadow: 0 0 6px rgba(0,0,0,.16),0 6px 12px rgba(0,0,0,.32);">
            <h3 class="m-t-2 text-xs-center">All Records</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Incident Type</th>
                        <th>Edit | Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% @people.each do |person| %>
                    <tr>
                        <td><%= person.name %></td>
                        <td><%= person.incident_type %></td>
                        <td><%= link_to(edit_person_path(person), class:'btn btn-primary') do %><i class="fa fa-pencil"></i><% end %> | <%= link_to(person, method: :delete, data:{confirm: 'Are you sure? (This can not be undone)'}, class:'btn btn-danger') do %><i class="fa fa-trash"></i><% end %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
                <%= link_to "Add Record", new_person_path, class:'color btn btn-primary m-b-2' %>
                <%= link_to "Active Records", active_path, class:'color btn btn-primary m-b-2' %>
                <%= link_to "Archived Records", archive_path, class:'color btn btn-primary m-b-2' %>
        </div>
    </div>
<span class="octicon octicon-alert"></span>